    "ayat": [
        {
            "ayat": 1,
            "arab": "سَبِّحِ اسْمَ رَبِّكَ الْاَعْلَىۙ ۝١",
            "latin": "sabbiḫisma rabbikal-a‘lâ",
            "terjemah": "Sucikanlah nama Tuhanmu Yang Mahatinggi,"
        },
        {
            "ayat": 2,
            "arab": "الَّذِيْ خَلَقَ فَسَوّٰىۖ ۝٢",
            "latin": "alladzî khalaqa fa sawwâ",
            "terjemah": "yang menciptakan, lalu menyempurnakan (ciptaan-Nya),"
        },
        {
            "ayat": 3,
            "arab": "وَالَّذِيْ قَدَّرَ فَهَدٰىۖ ۝٣",
            "latin": "walladzî qaddara fa hadâ",
            "terjemah": "yang menentukan kadar (masing-masing) dan memberi petunjuk,"
        },
        {
            "ayat": 4,
            "arab": "وَالَّذِيْٓ اَخْرَجَ الْمَرْعٰىۖ ۝٤",
            "latin": "walladzî akhrajal-mar‘â",
            "terjemah": "dan yang menumbuhkan (rerumputan) padang gembala,"
        },
        {
            "ayat": 5,
            "arab": "فَجَعَلَهٗ غُثَاۤءً اَحْوٰىۖ ۝٥",
            "latin": "fa ja‘alahû ghutsâ'an aḫwâ",
            "terjemah": "lalu menjadikannya kering kehitam-hitaman."
        },
        {
            "ayat": 6,
            "arab": "سَنُقْرِئُكَ فَلَا تَنْسٰىٓۖ ۝٦",
            "latin": "sanuqri'uka fa lâ tansâ",
            "terjemah": "Kami akan membacakan (Al-Qur’an) kepadamu (Nabi Muhammad) sehingga engkau tidak akan lupa,"
        },
        {
            "ayat": 7,
            "arab": "اِلَّا مَا شَاۤءَ اللّٰهُۗ اِنَّهٗ يَعْلَمُ الْجَهْرَ وَمَا يَخْفٰىۗ ۝٧",
            "latin": "illâ mâ syâ'allâh, innahû ya‘lamul-jahra wa mâ yakhfâ",
            "terjemah": "kecuali jika Allah menghendaki. Sesungguhnya Dia mengetahui yang terang dan yang tersembunyi."
        },
        {
            "ayat": 8,
            "arab": "وَنُيَسِّرُكَ لِلْيُسْرٰىۖ ۝٨",
            "latin": "wa nuyassiruka lil-yusrâ",
            "terjemah": "Kami akan melapangkan bagimu jalan kemudahan (dalam segala urusan)."
        },
        {
            "ayat": 9,
            "arab": "فَذَكِّرْ اِنْ نَّفَعَتِ الذِّكْرٰىۗ ۝٩",
            "latin": "fa dzakkir in nafa‘atidz-dzikrâ",
            "terjemah": "Maka, sampaikanlah peringatan jika peringatan itu bermanfaat."
        },
        {
            "ayat": 10,
            "arab": "سَيَذَّكَّرُ مَنْ يَّخْشٰىۙ ۝١٠",
            "latin": "sayadzdzakkaru may yakhsyâ",
            "terjemah": "Orang yang takut (kepada Allah) akan mengambil pelajaran,"
        },
        {
            "ayat": 11,
            "arab": "وَيَتَجَنَّبُهَا الْاَشْقَىۙ ۝١١",
            "latin": "wa yatajannabuhal-asyqâ",
            "terjemah": "sedangkan orang-orang yang celaka (kafir) akan menjauhinya,"
        },
        {
            "ayat": 12,
            "arab": "الَّذِيْ يَصْلَى النَّارَ الْكُبْرٰىۚ ۝١٢",
            "latin": "alladzî yashlan-nâral-kubrâ",
            "terjemah": "(yaitu) orang yang akan memasuki api (neraka) yang besar."
        },
        {
            "ayat": 13,
            "arab": "ثُمَّ لَا يَمُوْتُ فِيْهَا وَلَا يَحْيٰىۗ ۝١٣",
            "latin": "tsumma lâ yamûtu fîhâ wa lâ yaḫyâ",
            "terjemah": "Selanjutnya, dia tidak mati dan tidak (pula) hidup di sana."
        },
        {
            "ayat": 14,
            "arab": "قَدْ اَفْلَحَ مَنْ تَزَكّٰىۙ ۝١٤",
            "latin": "qad aflaḫa man tazakkâ",
            "terjemah": "Sungguh, beruntung orang yang menyucikan diri (dari kekafiran)"
        },
        {
            "ayat": 15,
            "arab": "وَذَكَرَ اسْمَ رَبِّهٖ فَصَلّٰىۗ ۝١٥",
            "latin": "wa dzakarasma rabbihî fa shallâ",
            "terjemah": "dan mengingat nama Tuhannya, lalu dia salat."
        },
        {
            "ayat": 16,
            "arab": "بَلْ تُؤْثِرُوْنَ الْحَيٰوةَ الدُّنْيَاۖ ۝١٦",
            "latin": "bal tu'tsirûnal-ḫayâtad-dun-yâ",
            "terjemah": "Adapun kamu (orang-orang kafir) mengutamakan kehidupan dunia,"
        },
        {
            "ayat": 17,
            "arab": "وَالْاٰخِرَةُ خَيْرٌ وَّاَبْقٰىۗ ۝١٧",
            "latin": "wal-âkhiratu khairuw wa abqâ",
            "terjemah": "padahal kehidupan akhirat itu lebih baik dan lebih kekal."
        },
        {
            "ayat": 18,
            "arab": "اِنَّ هٰذَا لَفِى الصُّحُفِ الْاُوْلٰىۙ ۝١٨",
            "latin": "inna hâdzâ lafish-shuḫufil-ûlâ",
            "terjemah": "Sesungguhnya (penjelasan) ini terdapat dalam suhuf (lembaran-lembaran) yang terdahulu,"
        },
        {
            "ayat": 19,
            "arab": "صُحُفِ اِبْرٰهِيْمَ وَمُوْسٰىࣖ ۝١٩",
            "latin": "shuḫufi ibrâhîma wa mûsâ",
            "terjemah": "(yaitu) suhuf (yang diturunkan kepada) Ibrahim dan Musa."
        }
    ]
